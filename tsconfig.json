{
	"$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"src/client/",
		"src/tests",
		"src/testData",
	],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"lib": ["es2023"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES6",
		"sourceMap": true,
		"baseUrl": "./src",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"paths": {
			"@src/*": [
				"./*"
			],
		}
	},
	"files": [
		"types.d.ts"
	]
}